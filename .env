# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================
BD_HOST=localhost
BD_NOMBRE=heldesk
BD_USUARIO=root
BD_CLAVE=

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================
# Clave para encriptación de datos sensibles
ENCRYPTION_KEY=heldesk_encryption_key_change_me_in_production

# Timeout de sesión en segundos (1 hora)
SESSION_TIMEOUT=3600

# ==========================================
# CONFIGURACIÓN DE HTTPS
# ==========================================
# Cambiar a true en producción
FORCE_HTTPS=false

# ==========================================
# CONFIGURACIÓN DE LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_DIR=logs/
LOG_MAX_SIZE=10485760

# ==========================================
# CONFIGURACIÓN DE RATE LIMITING
# ==========================================
# Máximo de intentos de login fallidos
MAX_LOGIN_ATTEMPTS=5
# Tiempo de bloqueo en segundos
LOCKOUT_TIME=900
# Ventana de tiempo para contar intentos (segundos)
LOGIN_ATTEMPT_WINDOW=600
